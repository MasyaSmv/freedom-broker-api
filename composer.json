{
  "name": "masyasmv/freedom-broker-api",
  "description": "Клиент и парсер для работы с API Freedom Broker (Laravel 8)",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Masya Smv",
      "email": "kuvaldamax@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "ext-mbstring": "*",
    "league/csv": "^9.0",
    "guzzlehttp/guzzle": "^7.0",
    "psr/http-client": "^1.0",
    "psr/http-message": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "orchestra/testbench": "^6.30",
    "mockery/mockery": "^1.5",
    "phpstan/phpstan": "^1.10",
    "larastan/larastan": "^2.5",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "MasyaSmv\\FreedomBrokerApi\\": "src/"
    }
  },
  "scripts": {
    "test":      "phpunit --colors=always",
    "live-test": "FREEDOM_LIVE_TEST=1 phpunit --filter 'FreedomHttpClientTest'",
    "coverage":  "phpunit --coverage-html build/coverage-html --coverage-text",
    "analyse":   "phpstan analyse --memory-limit=1G",
    "cs":        "php-cs-fixer fix --dry-run --diff",
    "cs-fix":    "php-cs-fixer fix"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "branch-alias": {
      "dev-main": "1.x-dev"
    }
  }
}
